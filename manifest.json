

{
  "name": "Amazon Clarifier",
  "version": "1.0.1",
  "description": "Hide out-of-stock items",
  "action": { 
    "default_popup": "popup.html",
    "default_icon": { 
      "48": "/images/dustpan48.png",
      "128": "/images/dustpan128.png"
    }
  },
  "icons": {
    "16": "/images/dustpan16.png",
    "48": "/images/dustpan48.png",
    "128": "/images/dustpan128.png"
  },
  "manifest_version": 3,
  "author": "Lore W.",
  "content_scripts": [
    {
      "matches": ["https://www.amazon.com/*"],
      "js": ["background.js"]
    }
  ]
 }
 